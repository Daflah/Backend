<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit Ticket (<%= ticket.title %>)</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update_ticket/<%= ticket._id %>" method="post" id="edit-ticket-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control" placeholder="Enter title" value="<%= ticket.title %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control" placeholder="Enter description" required><%= ticket.description %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select New Image</label>
                            <input class="form-control" type="file" name="image" />
                            <img src="/<%= ticket.image %>" width="100" class="img-thumbnail mt-1"> <!-- Menampilkan gambar yang sudah ada -->
                        </div>
                        <input type="hidden" name="old_image" value="<%= ticket.image %>" />
                        <div class="mb-3">
                            <label for="price">Price</label>
                            <input type="number" name="price" class="form-control" placeholder="Enter price" value="<%= ticket.price %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="location">Location</label>
                            <input type="text" name="location" class="form-control" placeholder="Enter location" value="<%= ticket.location %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="capacity">Capacity</label>
                            <input type="number" name="capacity" class="form-control" placeholder="Enter capacity" value="<%= ticket.capacity %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="reviews">Reviews</label>
                            <input type="number" name="reviews" class="form-control" placeholder="Enter reviews" value="<%= ticket.reviews %>" required />
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update Ticket" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
