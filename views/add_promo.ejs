<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto mt-4">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add New Promo</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/add_promo" method="post" id="add-promo-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control" placeholder="Enter title" required />
                        </div>
                        <div class="mb-3">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control" placeholder="Enter description" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input class="form-control" type="file" name="image" required />
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Add Promo" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <% promos.forEach(function(promo) { %>
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="/uploads/<%= promo.image %>" class="card-img-top" alt="<%= promo.title %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= promo.title %></h5>
                        <p class="card-text"><%= promo.description %></p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('layout/footer') %>