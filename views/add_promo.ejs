<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto mt-4">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add New Promo</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/add_promo" method="post" id="add-promo-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control" placeholder="Enter title" required />
                        </div>
                        <div class="mb-3">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control" placeholder="Enter description" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input class="form-control" type="file" name="image" required />
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Add Promo" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-8 mx-auto mt-4"> <!-- Kolom tambahan untuk menampilkan promo yang sudah ada -->
            <% promos.forEach(function(promo) { %> <!-- Mengubah variabel carousels menjadi promos -->
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-4">
                                <img src="<%= promo.image %>" alt="<%= promo.title %>" class="img-fluid" loading="lazy"> <!-- Mengganti variabel carousel menjadi promo -->
                            </div>
                            <div class="col-md-8">
                                <h5 class="card-title"><%= promo.title %></h5> <!-- Mengganti variabel carousel menjadi promo -->
                                <p class="card-text"><%= promo.description %></p> <!-- Mengganti variabel carousel menjadi promo -->
                                <div class="btn-group">
                                    <a href="/edit_promo/<%= promo._id %>" class="btn btn-primary">Edit</a> <!-- Mengganti route dan variabel carousel menjadi promo -->
                                    <form action="/delete_promo/<%= promo._id %>" method="POST"> <!-- Mengganti route dan variabel carousel menjadi promo -->
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        

<%- include('layout/footer') %>