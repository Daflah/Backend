<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit Promo (<%= promo.title %>)</h3> <!-- Mengubah judul menjadi "Edit Promo" -->
                </div>
                <div class="card-body p-4">
                    <form action="/update_promo/<%= promo._id %>" method="post" id="edit-promo-form" enctype="multipart/form-data"> <!-- Mengubah aksi form menjadi "/update_promo" -->
                        <div class="mb-3">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control" placeholder="Enter title" value="<%= promo.title %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control" placeholder="Enter description" required><%= promo.description %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select New Image</label>
                            <input class="form-control" type="file" name="image" />
                            <img src="/<%= promo.image %>" width="100" class="img-thumbnail mt-1"> <!-- Menampilkan gambar yang sudah ada -->
                        </div>
                        <input type="hidden" name="old_image" value="<%= promo.image %>" />
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update Promo" class="btn btn-success btn-lg" /> <!-- Mengubah nilai tombol menjadi "Update Promo" -->
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
